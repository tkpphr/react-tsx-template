{
  "compilerOptions": {
    "removeComments": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "noImplicitAny":true,
    "noImplicitThis":true,
    "noImplicitReturns": true,
    "noUnusedLocals":true,
    "target": "ES5",
    "outDir": "./dist/ts/",
    "module": "commonjs",
    "lib": ["es6","dom"],
    "sourceMap": true,
    "jsx": "react",
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "main/*":["src/ts/main/*"],
    },
  },
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}